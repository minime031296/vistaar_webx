{
    "version": 2,
    "builds": [
        {
            "src": "src/*.js",
            "use": "@vercel/node"
        },
        {
            "src": "src/main.jsx",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist" 
            }
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "src/index.js"
        },
        {
            "src": "/(.*)",
            "dest": "dist/$1"
        }
    ]
}
